{% extends 'basestore.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
    {% for product in products %}
        {% if loop.index0 is divisible by(3) %}
            <div class="row">
            {% endif %}
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">{{ product.name }}</div>
                    <div class="panel-body"><img src="/uploads/photos/{{ product.photo }}" class="img-responsive" style="width:100%" alt="Image"></div>
                    <div class="panel-footer">{{ product.price }}
                        -
                        <a href="{{ path('app_home_product_show', {'id': product.id}) }}">Detail</a>
                    </div>
                </div>
            </div>
            {% if loop.index is divisible by(3) or loop.last %}
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}