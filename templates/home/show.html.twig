{% extends 'basestore.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            <img src="/uploads/photos/{{ product.photo }}" class="img-responsive" style="width:100%" alt="Image">
        </div>
        <div class="col-md-8">
            <table class="table">
                <tbody></tbody>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        <td>{{ product.photo }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <td colspan="2"><a href="{{ path('app_cart_new', {'id': product.id}) }}" 
                        class="btn btn-danger">Add to cart</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}